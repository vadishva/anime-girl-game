<body>
    <div class="container">
        <h1>–ì–æ–≤–æ—Ä—è—â–∞—è –∞–Ω–∏–º–µ-–¥–µ–≤–æ—á–∫–∞</h1>
        <div class="character" id="character">
            <div class="eyes">
                <div class="eye"></div>
                <div class="eye"></div>
            </div>
            <div class="mouth" id="mouth"></div>
            <img src="https://i.pinimg.com/originals/49/de/21/49de217a3e2df3b7f6c4c0e5732c8a9a.png" alt="–ê–Ω–∏–º–µ-–¥–µ–≤–æ—á–∫–∞">
        </div>
        <div class="status" id="status">–ù–∞–∂–º–∏ –∫–Ω–æ–ø–∫—É –∏ —Å–∫–∞–∂–∏ —á—Ç–æ-–Ω–∏–±—É–¥—å!</div>
        <div class="response" id="response">...</div>
        <button id="askButton">–ü–æ–≥–æ–≤–æ—Ä–∏ —Å–æ –º–Ω–æ–π!</button>
    </div>

    <script>
        const responses = [
            "–î–∞, –∫–æ–Ω–µ—á–Ω–æ!",
            "–ù–µ—Ç, –Ω–∏ –∑–∞ —á—Ç–æ!",
            "–£—Ñ—Ñ... –ù–µ –∑–Ω–∞—é...",
            "–ú–æ–∂–µ—Ç –±—ã—Ç—å...",
            "–ê—Ö–∞—Ö–∞! –°–º–µ—à–Ω–æ!",
            "–≠-—ç-—ç... –ü–æ–≤—Ç–æ—Ä–∏?",
            "–ù—è! –ö–æ–Ω–µ—á–Ω–æ –¥–∞!",
            "–ù–µ—Ç, —è –ø—Ä–æ—Ç–∏–≤!",
            "–•–º... –ò–Ω—Ç–µ—Ä–µ—Å–Ω–æ...",
            "–Ø –ø–æ–¥—É–º–∞—é –æ–± —ç—Ç–æ–º!"
        ];
        
        const statusDiv = document.getElementById("status");
        const responseDiv = document.getElementById("response");
        const askButton = document.getElementById("askButton");
        const character = document.getElementById("character");
        const mouth = document.getElementById("mouth");
        
        // –ü—Ä–æ–≤–µ—Ä—è–µ–º –ø–æ–¥–¥–µ—Ä–∂–∫—É Web Speech API
        if (!('webkitSpeechRecognition' in window)) {
            statusDiv.textContent = "–ò–∑–≤–∏–Ω–∏, —Ç–≤–æ–π –±—Ä–∞—É–∑–µ—Ä –Ω–µ –ø–æ–¥–¥–µ—Ä–∂–∏–≤–∞–µ—Ç –≥–æ–ª–æ—Å–æ–≤—ã–µ –∫–æ–º–∞–Ω–¥—ã üò¢";
            askButton.disabled = true;
        } else {
            const recognition = new webkitSpeechRecognition();
            recognition.lang = 'ru-RU';
            recognition.interimResults = false;
            
            // –û–∑–≤—É—á–∏–≤–∞–Ω–∏–µ –æ—Ç–≤–µ—Ç–∞
            function speak(text) {
                mouth.classList.add("talking");
                const utterance = new SpeechSynthesisUtterance(text);
                utterance.lang = 'ru-RU';
                utterance.rate = 1.1;
                utterance.pitch = 1.3;
                
                utterance.onend = () => {
                    mouth.classList.remove("talking");
                };
                
                window.speechSynthesis.speak(utterance);
            }
            
            // –û–±—Ä–∞–±–æ—Ç—á–∏–∫ –Ω–∞—á–∞–ª–∞ –∑–∞–ø–∏—Å–∏
            recognition.onstart = () => {
                statusDiv.textContent = "–°–ª—É—à–∞—é... –ì–æ–≤–æ—Ä–∏!";
                responseDiv.textContent = "üîä...";
                askButton.disabled = true;
            };
            
            // –û–±—Ä–∞–±–æ—Ç—á–∏–∫ –æ—à–∏–±–æ–∫
            recognition.onerror = (event) => {
                statusDiv.textContent = `–û—à–∏–±–∫–∞: ${event.error}`;
                askButton.disabled = false;
            };
            
            // –û–±—Ä–∞–±–æ—Ç—á–∏–∫ –ø–æ–ª—É—á–µ–Ω–∏—è —Ä–µ–∑—É–ª—å—Ç–∞—Ç–∞
            recognition.onresult = (event) => {
                const question = event.results[0][0].transcript;
                statusDiv.textContent = `–¢—ã —Å–∫–∞–∑–∞–ª: "${question}"`;
                
                // –†–∞–Ω–¥–æ–º–Ω—ã–π –æ—Ç–≤–µ—Ç
                const randomResponse = responses[Math.floor(Math.random() * responses.length)];
                responseDiv.textContent = randomResponse;
                
                // –û–∑–≤—É—á–∏–≤–∞–µ–º –æ—Ç–≤–µ—Ç
                speak(randomResponse);
                
                // –ê–Ω–∏–º–∞—Ü–∏—è
                character.classList.add("active");
                setTimeout(() => character.classList.remove("active"), 500);
                
                askButton.disabled = false;
            };
            
            // –û–±—Ä–∞–±–æ—Ç—á–∏–∫ –æ–∫–æ–Ω—á–∞–Ω–∏—è –∑–∞–ø–∏—Å–∏
            recognition.onend = () => {
                if (statusDiv.textContent === "–°–ª—É—à–∞—é... –ì–æ–≤–æ—Ä–∏!") {
                    statusDiv.textContent = "–Ø –Ω–µ —Ä–∞—Å—Å–ª—ã—à–∞–ª–∞... –ü–æ–ø—Ä–æ–±—É–π –µ—â—ë —Ä–∞–∑!";
                    askButton.disabled = false;
                }
            };
            
            // –ó–∞–ø—É—Å–∫ —Ä–∞—Å–ø–æ–∑–Ω–∞–≤–∞–Ω–∏—è –ø–æ –∫–Ω–æ–ø–∫–µ
            askButton.addEventListener("click", () => {
                recognition.start();
            });
        }
    </script>
